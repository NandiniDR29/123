<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="Policy With TS" verbose="1" parallel="tests" thread-count="1024">
    <listeners>
        <listener class-name="com.exigen.ipb.eisa.utils.listener.ISBAListener"/>
        <listener class-name="com.exigen.istf.exec.testng.TimeShiftTestNgListener"/>
    </listeners>
    <parameter name="timeshift-scenario-mode" value="test"/>

    <test name="Policy Tests with TimeShift" parallel="methods">
        <groups>
            <run>
                <include name="WITH TS"/>
                <exclude name="TEAM MERGE"/>
            </run>
        </groups>
        <packages>
            <package name="com.exigen.ren.modules.policy.*"/>
        </packages>
    </test>

</suite>
